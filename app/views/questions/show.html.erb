
<h1>Тест: <%= @question.test.title %></h1>

<%= @question.body %>

<h2>Ответы</h2>
<%= link_to 'Новый ответ', new_question_answer_path(@question) %>

<ol>
  <%= render @question.answers %>
</ol>

<p>
	<%= link_to "Назад", admin_test_path(@question.test) %> |
	<%= link_to "Изменить", edit_question_path(@question) %> |
	<%= link_to "Удалить", question_path(@question),
                             method: :delete,
                             data:   { confirm: "Удалить вопрос?" } %>
</p>