<h1><%= question_header(@question) %></h1>
<%= form_with model: [@test, @question], local: true do |form| %>
  <% if @question.errors.present? %>
    <div>
      <h2>Errors detected:</h2>
      <ul>
        <% @question.errors.full_messages.each do |message| %>
          <li><%= message %></li>          
        <% end %>
      </ul>
    </div>
  <% end %>

  <table>
  <p>
    <%= form.label :body, "Текст вопроса" %><br>
    <%= form.text_field :body %>
  </p>
  
  <%= form.submit %>
  </table><br>

  <%= link_to "Назад", test_questions_path(@question.test) %>
<% end %>