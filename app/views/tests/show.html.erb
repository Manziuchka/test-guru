<h1>Тест: <%= @test.title %></h1>

<h2>Вопросы к тесту:</h2>

<% @test.questions.each do |question| %>
   <li><%= question.body %><br>
<% end %>

<p>
   <%= link_to "Создать новый вопрос", new_test_question_path(@test) %>
</p>

<p>
	<%= link_to "Назад", tests_path(@test) %> |
	<%= link_to "Изменить", edit_test_path(@test) %> |
	<%= link_to "Удалить", test_path(@test),
                             method: :delete,
                             data:   { confirm: "Удалить тест?" } %>
</p>