<h1>Все тесты:</h1>

<table border="1">
  <tr>
    <th>Id</th>
    <th>Название</th>
    <th>Уровень</th>
    <th>Количество вопросов</th>
    <th colspan=3>Действия</th>
  </tr>

  <% @tests.each do |test| %>
    <tr>
      <td><%= test.id %></td>
      <td><%= test.title %></td>
      <td><%= test.level %></td>
      <td><%= test.questions.count%></td>
      <td><%= link_to "Просмотр", test_path(test) %></td>
	    <td><%= link_to "Изменить", edit_test_path(test) %></td>
      <td><%= link_to 'Удалить', test_path(test), 
              method: :delete,
              data: { confirm: 'Вы уверены?' } %></td>
    </tr>
  <% end %>
</table>