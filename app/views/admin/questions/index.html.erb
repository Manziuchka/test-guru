<h1>Вопросы:</h1>

<table border="1">
  <tr>
    <th>Id</th>
    <th>Текст вопроса</th>
    <th colspan=3>Действия</th>
  </tr>

  <% @questions.each do |question| %>
    <tr>
      <th><%= question.id %></th>
      <th><%= question.body %></th>
      <td><%= link_to "Просмотр", admin_question_path(question) %></td>
	    <td><%= link_to "Изменить", edit_admin_question_path(question) %></td>
        <td><%= link_to 'Удалить', admin_question_path(question), 
              method: :delete,
              data: { confirm: 'Вы уверены?' } %></td>
    </tr>
  <% end %>
</table>

<p>
   <%= link_to "Создать новый вопрос", new_admin_test_question_path(@test) %>
</p>